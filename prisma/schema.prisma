// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ SUBSCRIBERS ============

model Subscriber {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String?
  status          String    @default("active") // active, unsubscribed, bounced
  tier            String    @default("free")   // free, premium
  source          String?   // website, content-gate, import, referral
  company         String?   // Optional: capture company name
  role            String?   // Optional: capture job title
  subscribedAt    DateTime  @default(now())
  unsubscribedAt  DateTime?

  // Sync status with newsletter platform
  platformSyncedAt DateTime?
  platformId       String?   // ID in Loops/Resend/ConvertKit
}

// ============ ARTICLES ============

model Article {
  id            String    @id @default(cuid())
  slug          String    @unique
  title         String
  subtitle      String?
  excerpt       String    // For previews, SEO, social cards
  content       String    @db.Text
  coverImage    String?

  author        User      @relation(fields: [authorId], references: [id])
  authorId      String

  category      String    // news, insight, podcast, jobs, deep-dive
  tags          String[]  // Array of tag strings

  isPublished   Boolean   @default(false)
  isFeatured    Boolean   @default(false)
  isPremium     Boolean   @default(false) // For future premium tier

  publishedAt   DateTime?
  readTime      Int       // Estimated minutes

  // Optional: link to newsletter issue
  newsletterIssue Int?    // e.g., 47, 48, 49

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// ============ AUTH (NextAuth) ============

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  role          String    @default("user") // user, admin

  articles      Article[]
  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
